@{
    ViewData["Title"] = "Home";
}

@model BookListViewModel 


<div class="card text-left bg-dark text-light">
    <div page-model="@Model.PagingInfo" 
         page-action="Index" 
         page-classes-enabled="true" 
         page-class="" 
         page-class-normal="nav-link" 
         page-class-selected="nav-link active bg-secondary border-secondary" 
         div-class="card-header"
         list-class="nav nav-tabs card-header-tabs"
         list-item-class="nav-item"
         class="card-header">
    </div>
    <div class="card-body bg-secondary">
        <div class="d-flex flex-wrap">
            @foreach (var book in Model.Books)
            {
                <div class="card bg-dark p-2 m-2" style="width: 22rem">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            @book.AuthorFirst
                            @if (System.String.IsNullOrEmpty(book.AuthorMiddle))
                            {@:
                            }
                            else
                            {
                                if (book.AuthorMiddle.Length == 1)
                                {
                                    @:@book.AuthorMiddle.
                                }
                                else
                                {
                                    @book.AuthorMiddle
                                }
                            } @book.AuthorLast
                        </h6>
                        <p class="card-text">Publisher: @book.Publisher</p>
                        <p class="card-text">ISBN: @book.ISBN</p>
                        <table class="table table-dark text-center">
                            <thead>
                                <tr>
                                    <th>Classification</th>
                                    <th>Category</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@book.Classification</td>
                                    <td>@book.Category</td>
                                </tr>
                            </tbody>
                        </table>
                        <p class="card-text">Price: $@book.Price</p>
                        <p class="card-text">Page Count: @book.NumPages</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
